<% layout("/layouts/boilerplate")  %>
<div class="row">
    <div class="col-8 offset-2">
<br>
    <h3>create a new listing</h3>
    <form action="/listings" method="post"   class="needs-validation" novalidate enctype="multipart/form-data">

    <div class="mb3">
        <!-- use mb3 for add spacing -->
        
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Enter your title" class="form-control" required/>
        <div class="valid-feedback">Looks good!</div>

    </div>
        

    <div class="mb3">
        <label for="textarea" class="form-label">Description</label>
        <textarea type="text" name="listing[description]" placeholder="Enter your description" required class="form-control"></textarea>


    </div>

    <!-- price and country get into one row -->
<div class="row">

    <div class="mb3 col-md-4">
    
        <label for="price" class="form-label">price</label>
        <input name="listing[price]" placeholder="Enter your price" required class="form-control"/>
        <div class="invalid-feedback">Please enter a valid Price</div>
    
    </div>
    
    <div class="mb3 col-md-8">
    
    
        <label for="country" class="form-label">country</label>
        <input type="text" name="listing[country]" placeholder="Enter your country" required class="form-control"/>
        <div class="invalid-feedback">Please enter the country Name</div>
    
    </div>

</div>


    <div class="mb3">


        <label for="location" class="form-label">location</label>
        <input type="text" name="listing[location]" placeholder="Enter your location" required class="form-control"/>
        <div class="invalid-feedback">Location should be valid</div>
    </div>

    <div class="mb3">


        <label for="image" class="form-label">image link></label>
        <input type="file" name="listing[image]" placeholder="image/url" required class="form-control"/>
       


    </div>

<br><br>
<button class="btn btn-dark add-btn">ADD</button>


<br><br>


        
    
    </form>
</div>
</div>
